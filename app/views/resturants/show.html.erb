<div class="container-fluid">
	<div class="row">
		<div class="col-md-4" id="searched-restaurant">
			<h2><a href=<%= @resturant.yelpurl %>><%= @resturant.name %></a></h2>
			<p> <strong>Yelp Rating:</strong> <%= @resturant.yelpratingicon %> </p>
			<p> <strong>Reviews: </strong><%= @resturant.yelpreviews %> </p>
      <p> <strong> Cuisine: </strong> <%= @resturant.foodtype %></p>
      <p> <strong> Address: </strong> <%= @resturant.address %></p>
      <p> <strong> Phone Number: </strong> <%= @resturant.phone %></p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8" id="posts">
			<h2> User Reviews </h2>
			<% @resturant.posts.each do |comment| %>
      <div class="panel panel-default">
        <div class="panel-heading"><img src=<%= comment.user.image_url %> height="32" width="32" class='pull-left'><p> <%= comment.user.first_name %> </p></div>
        <div class="panel-body">
          	<p> <%= comment.comment %> </p>
        </div>
      </div>

			<%	end %>
		</div>
	</div>
  <% if current_user %>
	<div class="row">
    <div class="col-md-8 form-group">
		<input type="hidden" id="resturant_id" value=<%= @resturant.id %>>
		<input type="hidden" id="user_id" value=<%= current_user.id %>>
		<input type="text" id="comment">
		<button id="addReview">Submit a Review</button>
    </div>
	</div>
    <% end %>
</div>
